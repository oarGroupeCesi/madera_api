<div class="middlePage col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">

    <div class="panel panel-info">

        <div class="panel-heading">
            <h1 class="panel-title">
                <img alt="logo madera" src="images/logo-madera.png" />
                <div>Application de gestion des devis - <a href="#">Madera</a></div>
            </h1>
        </div>

        <div class="panel-body">
            <div class="row">

                <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 formConnect">
                    <form class="form-horizontal" id="login-form">
                        <div id="message" class="hide alert alert-danger" role="alert"></div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="login-username" type="email" class="form-control" name="email" value="" placeholder="Email" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password" placeholder="Mot de passe" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div id="submit-login-form" class="input-group">
                                <button id="loginButton" class="btn btn-primary btn-sm">Se connecter</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>

</div>